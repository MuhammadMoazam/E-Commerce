<div class="container pt-5">
  <div class="row">
    <div class="offset-xl-4 col-xl-4 offset-lg-4 col-lg-4 offset-md-3 col-md-6">
      <div class="border p-5">
         <div>
          <%= image_tag 'add-user.png' ,size:'100x100'%>
          <strong> <p class="text-center"> Sign up to buy new items</p> </strong>
        </div>
        <div>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="text-left">
             <div class="field">
              <%= f.label :email, class: "form-label" %><br />
              <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
            </div>

            <div class="field ">
              <%= f.label :full_name, class: "form-label" %><br />
              <%= f.text_field :full_name, class: "form-control", autofocus: true, autocomplete: "Full Name" %>
            </div>

            <div class="field">
              <%= f.label :username, class: "form-label" %><br />
              <%= f.text_field :username, class: "form-control", autocomplete: "username" %>
            </div>

            <div class="field">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, class: "form-label" %><br />
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

          </div>
         

          <div class="actions text-center">
            <%= f.submit "Sign up", class: "btn btn-primary form-control mt-3" %>
          </div>
        <% end %>
      </div>

      <div class="mt-4 px-2 py-2 border text-center">
        <p>Already have an account? <%= link_to 'Log in', new_user_session_path, class: "text-decoration-none" %></p>
      </div>
    </div>
  </div>
</div>
