<div class="container pt-5">
  <div class="row">
    <div class="offset-xl-4 col-xl-4 offset-lg-4 col-lg-4 offset-md-3 col-md-6 text-center">
      <div class="border p-5">
        <div>
          <h2> E-Commerce Store </h2>
        </div>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control mt-3 bg-light" %>
          </div>

          <div class="actions">
            <%= f.submit "Send Login Link", class: "btn btn-primary form-control mt-3" %>
          </div>
        <% end %>

         <div class="pt-3">
            <strong> <p><%=link_to 'Create new account', new_user_registration_path, class:"text-decoration-none text-secondary" %></p></strong>

          </div>

      </div>

        <div class="pt-2 border ">
            <strong><p><%=link_to 'Back to Login', new_user_session_path , class:"text-decoration-none text-secondary" %></p></strong>
        </div>
    </div>
  </div>
</div>
