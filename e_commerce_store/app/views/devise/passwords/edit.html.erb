<div class="container pt-5">

  <div class="row">
    <div class="offset-xl-4 col-xl-4 offset-lg-4 col-lg-4 offset-md-3 col-md-6 text-center">
      <div class="border p-5">
        <div>
          <h2> E-Commerce Store </h2>
        </div>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class: "form-control mt-3 bg-light" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm new password", class: "form-control mt-3 bg-light" %>
          </div>

          <div class="actions">
            <%= f.submit "Change my password", class: "btn btn-primary form-control mt-3" %>
          </div>
        <% end %>

        <div class="pt-3">
            <strong><p><%=link_to 'Back to Login', new_user_session_path, class:"text-decoration-none text-secondary" %></p></strong>
          </div>
        </div>
 
      <div class="mt-4 px-2 py-4 border">
            <strong> <p><%=link_to 'Create new account', new_user_registration_path, class:"text-decoration-none text-secondary" %></p></strong>
      </div>
    </div>
  </div>
</div>
